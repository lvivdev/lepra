<h2>Post details:</h2>
<p>	
	<%= @row['content'] %>
	<br />
	Created at: <%= @row['created_date'] %>
</p>

<hr />

<% @comments.each do |comment| %>
	<p>
		<%= comment['content'] %>
	</p>
<% end %>
<br />
<h4>Comments:</h4>
<p>
	<form action="/details/<%= @row['id'] %>" method="POST" role="form">
		<textarea name="content" style="width: 400px" class="form-control" rows="3" placeholder="Type comment here"></textarea>
	<br />
		<button type="submit" class="btn btn-primary">Add comment</button>
	</form>
</p>